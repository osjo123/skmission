<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yj.myapplication9.MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/image_chair"
        android:src="@drawable/chairicon_2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />



    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:text="IMAGE"
        android:drawableTop="@drawable/chairbutton"
        android:background="@drawable/buttonimage_3"
        android:id="@+id/button_image"
        android:padding="5dp"
        android:textSize ="16sp"
        android:layout_below="@+id/image_chair"
        android:layout_alignLeft="@+id/image_chair"
        android:layout_alignStart="@+id/image_chair" />

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:text="GRAPH"
        android:drawableTop="@drawable/graph3"
        android:background="@drawable/buttonimage_3"
        android:id="@+id/button_graph"
        android:padding="5dp"
        android:textSize ="16sp"
        android:layout_below="@+id/image_chair"
        android:layout_alignRight="@+id/image_chair"
        android:layout_alignEnd="@+id/image_chair"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="마이페이지"
        android:drawableRight="@drawable/sett"
        android:background="@drawable/buttonimage_3"
        android:id="@+id/button_mypage"
        android:layout_weight="1"
        android:textSize ="20sp"
        android:layout_below="@+id/button_image"
        android:layout_alignLeft="@+id/image_chair"
        android:layout_alignRight="@+id/image_chair"
        android:layout_alignStart="@+id/image_chair"
        android:layout_alignEnd="@+id/image_chair"
        />

</RelativeLayout>
