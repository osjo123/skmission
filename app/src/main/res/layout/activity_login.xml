<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yj.myapplication9.LoginActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/image_login"
        android:src="@drawable/chairicon_2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:singleLine="true"
        android:id="@+id/editText_ID"
        android:hint="아이디"
        android:imeOptions="actionNext"
        android:textColor="@color/colorText"
        android:layout_below="@+id/image_login"
        android:layout_centerHorizontal="true"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_password"
        android:hint="비밀번호"
        android:textColor="@color/colorText"
        android:layout_below="@+id/editText_ID"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입장"
        android:textSize ="16sp"
        android:id="@+id/button_login"
        android:background="@drawable/buttonimage_3"
        android:layout_weight="1"
        android:layout_below="@+id/editText_password"
        android:layout_alignRight="@+id/image_login"
        android:layout_alignEnd="@+id/image_login"
        android:layout_alignLeft="@+id/image_login"
        android:layout_alignStart="@+id/image_login" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비회원 입장"
        android:textSize ="16sp"
        android:layout_marginTop="5dp"
        android:id="@+id/button_guest"
        android:background="@drawable/buttonimage_3"
        android:layout_weight="1"
        android:layout_below="@+id/button_login"
        android:layout_alignRight="@+id/image_login"
        android:layout_alignEnd="@+id/image_login"
        android:layout_alignLeft="@+id/image_login"
        android:layout_alignStart="@+id/image_login" />


</RelativeLayout>